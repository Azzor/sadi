<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> no permitieron grabar los datos del Empleado:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :usuario %>
    <%= f.text_field :usuario, :size => 10, :class=>"txt" %>
  </div>
  <div class="field">
    Apellido Paterno
    <%= f.text_field :apepat, :size => 20, :class=>"txt" %>
  </div>
  <div class="field">
    Apellido Materno
    <%= f.text_field :apemat, :size => 20, :class=>"txt" %>
  </div>
  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, :size => 25, :class=>"txt" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :size => 50, :class=>"txt" %>
  </div>
  <div class="field">
    Contraseña
    <%= f.password_field :password, :size => 20, :class=>"txt" %>
  </div>
  <div class="field">
    Repetir Contraseña
    <%= f.password_field :password, :size => 20, :class=>"txt" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn-action btn-primary" %>
  </div>
<% end %>
