<%= form_for(@cliente, :class=>"new_cliente") do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error no permitio", "errores no permitieron ") %> grabar los datos del cliente:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cliente %>
    <%= f.text_field :cliente, :size => 10, :class=>"txt" %>
  </div>
  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, :size => 40, :class=>"txt" %>
  </div>
  <div class="field">
    Grupo Empresarial
    <%= f.collection_select(:grupo_id, Grupo.all, :id, :nombre, :prompt => 'sin grupo', :class=>"txt") %>
    <%#= f.text_field :gruemp_id %>
  </div>
  <div class="field">
    <%= f.label :contacto %>
    <%= f.text_field :contacto, :size => 40, :class=>"txt" %>
  </div>
  <div class="field">
    <%= f.label :telefono %>
    <%= f.phone_field :telefono, :size => 20, :class=>"txt" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :size => 60, :class=>"txt" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn-action btn-primary" %>
  </div>
<% end %>
